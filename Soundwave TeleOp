package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.hardware.DcMotorSimple;

@TeleOp(name = "SoundwaveTeleop", group = "Linear OpMode")
public class SoundwaveTeleop extends LinearOpMode {

    // Drive motors
    private DcMotor frontRightMotor = null;
    private DcMotor frontLeftMotor = null;
    private DcMotor backRightMotor = null;
    private DcMotor backLeftMotor = null;

    // Intake motors
    private DcMotor intake1 = null;
    private DcMotor intake2 = null;

    // Flywheel motors
    private DcMotor flywheelLeft = null;
    private DcMotor flywheelRight = null;

    // Full speed and half speed RPM for flywheel (6000 RPM max motor speed)
    private final double FULL_SPEED_RPM = 4500;  // 75% of 6000 RPM
    private final double HALF_SPEED_RPM = 3000;  // 50% of 6000 RPM

    @Override
    public void runOpMode() {

        // Hardware mapping
        frontRightMotor = hardwareMap.get(DcMotor.class, "port");
        frontLeftMotor  = hardwareMap.get(DcMotor.class, "port");
        backRightMotor  = hardwareMap.get(DcMotor.class, "port");
        backLeftMotor   = hardwareMap.get(DcMotor.class, "port");

        intake1 = hardwareMap.get(DcMotor.class, "port");
        intake2 = hardwareMap.get(DcMotor.class, "port");

        flywheelLeft  = hardwareMap.get(DcMotor.class, "portOne");
        flywheelRight = hardwareMap.get(DcMotor.class, "portTwo");

        // Set motor directions
        frontRightMotor.setDirection(DcMotorSimple.Direction.REVERSE);
        backRightMotor.setDirection(DcMotorSimple.Direction.REVERSE);
        flywheelRight.setDirection(DcMotorSimple.Direction.REVERSE);

        // Set flywheel motors to use encoders for velocity control
        flywheelLeft.setMode(DcMotor.RunMode.RUN_USING_ENCODER);
        flywheelRight.setMode(DcMotor.RunMode.RUN_USING_ENCODER);

        waitForStart();

        while (opModeIsActive()) {

            // -------------------------
            // GAMEPAD 1 DRIVING
            // -------------------------
            double y = -gamepad1.left_stick_y;
            double x = gamepad1.left_stick_x;
            double turn = gamepad1.right_stick_x;

            double fl = y + x + turn;
            double fr = y - x - turn;
            double bl = y - x + turn;
            double br = y + x - turn;

            frontLeftMotor.setPower(fl);
            frontRightMotor.setPower(fr);
            backLeftMotor.setPower(bl);
            backRightMotor.setPower(br);

            // -------------------------
            // GAMEPAD 1 INTAKE
            // -------------------------
            if (gamepad1.right_trigger > 0.1) {
                intake1.setPower(-0.8);
                intake2.setPower(-0.8);
            } else {
                intake1.setPower(0.0);
                intake2.setPower(0.0);
            }

            // -------------------------
            // GAMEPAD 2 FLYWHEELS (setVelocity)
            // -------------------------
            if (gamepad2.right_trigger > 0.1) {
                // Full speed at 4500 RPM
                flywheelLeft.setVelocity(FULL_SPEED_RPM);
                flywheelRight.setVelocity(FULL_SPEED_RPM);
                intake1.setPower(-1);
                intake2.setPower(-1);
            }
            else if (gamepad2.left_trigger > 0.1) {
                // Half speed at 3000 RPM
                flywheelLeft.setVelocity(HALF_SPEED_RPM);
                flywheelRight.setVelocity(HALF_SPEED_RPM);
                intake1.setPower(-1);
                intake2.setPower(-1);
            }
            else {
                // Stop flywheels and intake when triggers are not pressed
                flywheelLeft.setVelocity(0);
                flywheelRight.setVelocity(0);
                intake1.setPower(0.0);
                intake2.setPower(0.0);
            }

            // Telemetry for debugging
            telemetry.addData("Intake", gamepad1.right_trigger > 0.1 ? -0.8 : 0.0);
            telemetry.addData("Flywheel Left Velocity", flywheelLeft.getVelocity());
            telemetry.addData("Flywheel Right Velocity", flywheelRight.getVelocity());
            telemetry.update();
        }
    }
}
