package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.eventloop.opmode.TeleOp;
import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.hardware.Servo;

@TeleOp(name="PushPin", group="Examples")
public class PushPin extends OpMode {

    private Servo servo;
    private boolean yWasPressed = false;
    private double savedPosition = 0.5;

    @Override
    public void init() {
        servo = hardwareMap.get(Servo.class, "servo");
        savedPosition = servo.getPosition(); // initial saved position
        servo.setPosition(savedPosition);
    }

    @Override
    public void loop() {
        // When Y is pressed
        if (gamepad2.y) {
            if (!yWasPressed) {
                savedPosition = servo.getPosition(); // remember current pos
                servo.setPosition(1.0);              // move to target position
                yWasPressed = true;
            }
        } else {
            // When Y is released
            if (yWasPressed) {
                servo.setPosition(savedPosition);   // restore saved position
                yWasPressed = false;
            }
        }

        telemetry.addData("Servo Pos", servo.getPosition());
        telemetry.addData("Saved Pos", savedPosition);
        telemetry.update();
    }
}
